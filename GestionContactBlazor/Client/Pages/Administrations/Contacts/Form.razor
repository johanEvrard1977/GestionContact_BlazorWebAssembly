 <EditForm Model="@entity" OnValidSubmit="@OnValidSubmit">
<DataAnnotationsValidator />
<div class="form-group">
    <label>Nom :</label>
    <div>
        <InputText @bind-Value="@entity.Nom" placeholder="Nom" />

        <ValidationMessage For="@(() => entity.Nom)" />
    </div>
</div>
<div class="form-group">
    <label>Prénom :</label>
    <div>
        <InputText @bind-Value="@entity.Prenom" placeholder="Prénom" />

        <ValidationMessage For="@(() => entity.Prenom)" />
    </div>
</div>
<div class="form-group">
    <label>Date_De_Naissance :</label>
    <div>
        <InputDate @bind-Value="@entity.Date_De_Naissance" placeholder="Date de naissance" />

        <ValidationMessage For="@(() => entity.Date_De_Naissance)" />
    </div>
</div>
<div class="form-group">
    <label>Email :</label>
    <div>
        <InputText @bind-Value="@entity.Email" placeholder="Email" />

        <ValidationMessage For="@(() => entity.Email)" />
    </div>
</div>
<div class="form-group">
    <label>Teléphone :</label>
    <div>
        <InputText @bind-Value="@entity.Telephone" placeholder="Telephone" />

        <ValidationMessage For="@(() => entity.Telephone)" />
    </div>
</div>
<div class="form-group">
    <label>UserId :</label>
    <div>
        <InputNumber @bind-Value="@entity.UserId" />

        <ValidationMessage For="@(() => entity.UserId)" />
    </div>
</div>
<button type="submit" class="btn btn-primary mb-2">
    @ButtonText
</button>


</EditForm>
@code {
    [Parameter] public ContactShared entity { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; } }

